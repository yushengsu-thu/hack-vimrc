" Trace code: gutentags
"
" Gutentags searches for project directory markers and stops recursing to the upper directory level when it encounters these files or directory names. "
let g:gutentags_project_root = ['.root', '.svn', '.git', '.project']

" The name of the generated data file "
let g:gutentags_ctags_tagfile = '.tags'

" Automatically place all generated tags files into the ~/.cache/tags directory to avoid cluttering the project directory. "
let s:vim_tags = expand('~/.cache/tags')
let g:gutentags_cache_dir = s:vim_tags
" Check if ~/.cache/tags does not exist, and create it if necessary "
if !isdirectory(s:vim_tags)
   silent! call mkdir(s:vim_tags, 'p')
endif

" "Configure the parameters for ctags "
let g:gutentags_ctags_extra_args = ['--fields=+niazS', '--extra=+q']
let g:gutentags_ctags_extra_args += ['--c++-kinds=+pxI']
let g:gutentags_ctags_extra_args += ['--c-kinds=+px']

let g:coc_disable_startup_warning = 1
